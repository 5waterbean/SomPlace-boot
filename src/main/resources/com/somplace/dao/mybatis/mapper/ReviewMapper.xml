<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.somplace.dao.mybatis.mapper.ReviewMapper">
	<cache />
	<resultMap type="com.somplace.domain.Review"
		id="reviewResultSet">
		<result column="MEETINGID" property="meetingId" />
		<result column="STAR" property="star" />
		<result column="REVIEWMEMO" property="reviewMemo" />
	</resultMap>

	<!-- 후기 생성 -->
	<insert id="createReview"
		parameterType="com.somplace.domain.command.ReviewCommand">
		INSERT INTO REVIEW VALUES
		(REVIEWID_seq.nextval, #{star},
		#{reviewMemo}, #{id}, #{meetingId})
	</insert>

	<!-- 후기 목록 조회 -->
	<select id="getReviewById" resultMap="reviewResultSet">
		SELECT star, reviewMemo, id
		FROM REVIEW
		WHERE review.meetingid = #{meetingId}
	</select>

	<!-- 후기 수정 -->
	<update id="updateReview" parameterType="com.somplace.domain.command.ReviewCommand">
		UPDATE Review
		SET star = #{star}, reviewMemo = #{reviewMemo}
		WHERE meetingId = #{meetingId}
	</update>
</mapper>