<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.somplace.dao.mybatis.mapper.MemberMapper">
	<cache/>

	<select id="getMember" resultType="Member"> 
		SELECT ID as memberId, PW, NAME, STUDENTNUMBER, MAJOR, PHONE, GOOD, BAD, BIRTH
		FROM MEMBER
		WHERE ID = #{memberId}
	</select>
	
	<select id="createMember" parameterType="com.somplace.domain.command.MemberCommand"> 
		INSERT INTO MEMBER
		VALUES (#{memberId}, #{pw}, #{name}, 
				#{studentNumberIntType}, #{major}, #{phone}, 
				#{birth}, 0, 0)
	</select>

	<select id="memberIdCheck" resultType="int"> 
		SELECT COUNT(*)
		FROM MEMBER
		WHERE ID = #{memberId}
	</select>
	
	<update id="updateMember" parameterType="com.somplace.domain.command.MemberCommand">
		UPDATE MEMBER
		SET PW = #{pw},
			NAME = #{name},
			MAJOR = #{major},
			PHONE = #{phone}
		WHERE ID = #{memberId}
	</update>
	
	<delete id="deleteMember">
		DELETE FROM MEMBER
		WHERE ID = #{memberId}
	</delete>
</mapper>